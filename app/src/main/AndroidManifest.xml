<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lzp.yw.com.medioplayer">

    <application
        android:name="lzp.yw.com.medioplayer.baselayer.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen">

       <!-- 基础activity //Android:theme="@android:style/Theme.NoTitleBar" @android:style/Theme.NoTitleBar.Fullscreen -->
        <activity
            android:name="lzp.yw.com.medioplayer.baselayer.BaseActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <!-- 配置服务器信息页面 -->
        <activity android:name="lzp.yw.com.medioplayer.wostools.ToolsActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 测试 activity -->
        <activity android:name=".viewlayer.MainActivity">
        </activity>

        <!-- 遠程通信服務 android:label="_medioplayerServer" android:process=":remote"
        冒号’:’这个前缀将把这个名字附加到你的包所运行的标准进程名字的后面作为新的进程名称 -->
        <service android:name="lzp.yw.com.medioplayer.wosappserver.CommunicationServer" android:process=":remote_communication" />
        <!-- 下载服务 -->
        <service android:name="lzp.yw.com.medioplayer.wosappserver.LoaderServer" android:process=":remote_load" />


        <!-- 本地接受 通讯服务的指令 发送中心 -->
        <receiver android:name="lzp.yw.com.medioplayer.wosappbroadcast.CommunicationBroadcast" >
            <intent-filter>
                <action android:name="com.cmd.broad" />
            </intent-filter>
        </receiver>



    </application>

    <!-- 权限 -->
<uses-permission android:name="android.permission.INTERNET"/>
    </manifest>