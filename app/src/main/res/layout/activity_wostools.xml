<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="60dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="终端ID:"
                android:textStyle="bold"
                >
            </TextView>
            <EditText
                android:id="@+id/terminalNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:layout_weight="1"
                android:inputType="number">
                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="服务器地址:"
                android:textStyle="bold"
                >
            </TextView>
            <EditText
                android:id="@+id/serverip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:layout_weight="1">
                <requestFocus />
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="服务器端口:"
                android:textStyle="bold"
                >
            </TextView>
            <EditText
                android:id="@+id/serverport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:layout_weight="1"
                android:inputType="number">
                <requestFocus />
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="识别编号:"
                android:textStyle="bold"
                >
            </TextView>
            <EditText
                android:id="@+id/companyid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:layout_weight="1"
                android:inputType="number">
                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="资源文件夹:"
                android:textStyle="bold"
                >
            </TextView>
            <EditText
                android:id="@+id/BasePath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:layout_weight="1">
                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="电子报资源:"
                android:textStyle="bold"
                >
            </TextView>
            <EditText
                android:id="@+id/EpaperPath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:layout_weight="1">
                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="频道文件夹:"
                android:textStyle="bold"
                >
            </TextView>
            <EditText
                android:id="@+id/SchudulePath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:layout_weight="1">
                <requestFocus />
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView

                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="存储上限值:"
                android:textStyle="bold"
                >
            </TextView>
            <EditText
                android:id="@+id/StorageLimits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:layout_weight="1"
                android:inputType="number">
                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="心跳时间:"
                android:textStyle="bold"
                >
            </TextView>
            <EditText
                android:id="@+id/HeartBeatInterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:layout_weight="1"
                android:inputType="number">
                <requestFocus />
            </EditText>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView

            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="重启时间:"
            android:textStyle="bold"
            >
        </TextView>
        <EditText
            android:id="@+id/RestartBeatInterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""
            android:layout_weight="1"
            android:inputType="number">
            <requestFocus />
        </EditText>
    </LinearLayout>

        <!-- ftp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="FTP IP:"
                android:textStyle="bold"
                >
            </TextView>
            <EditText
                android:id="@+id/ftpaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:layout_weight="1"
                >
                <requestFocus />
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="FTP 端口:"
                android:textStyle="bold"
                >
            </TextView>
            <EditText
                android:id="@+id/ftpport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:layout_weight="1"
                android:inputType="number"
               >
                <requestFocus />
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="FTP 用户:"
                android:textStyle="bold"
                >
            </TextView>
            <EditText
                android:id="@+id/ftpuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:layout_weight="1"
                >
                <requestFocus />
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="FTP 密码:"
                android:textStyle="bold"
                >
            </TextView>
            <EditText
                android:id="@+id/ftppass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:layout_weight="1"
                >
                <requestFocus />
            </EditText>
        </LinearLayout>
        <!-- button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="150dp"
            >
            <Button
                android:id="@+id/btnGetID"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="88dp"
                android:onClick="getId"
                android:text="获取ID" />
            <Button
                android:id="@+id/btnSaveData"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="saveData"
                android:text="保存" />
        </LinearLayout>
      </LinearLayout>
    </ScrollView>

</FrameLayout>
